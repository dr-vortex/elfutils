{
	"extends": [ "eslint:recommended", "plugin:@typescript-eslint/recommended" ],
	"parser": "@typescript-eslint/parser",
	"plugins": "@typescript-eslint",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"env": {
		"esnext": true,
		"browser": true
	},
	"rules": {
		"no-useless-escape": "warn",
		"no-unused-vars": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"no-unreachable": "warn",
		"no-extra-semi": "warn",
		"no-fallthrough": "off",
		"no-empty": "warn",
		"no-case-declarations": "off"
	}
}